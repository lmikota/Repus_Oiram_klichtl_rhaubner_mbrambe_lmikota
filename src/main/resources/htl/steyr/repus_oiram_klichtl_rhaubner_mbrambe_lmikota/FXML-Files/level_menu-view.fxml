<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane fx:id="level_menu_AnchorPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1600.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="htl.steyr.repus_oiram_klichtl_rhaubner_mbrambe_lmikota.Controller.Level_Menu_Controller">
    <children>
        <ImageView fitHeight="${level_menu_AnchorPane.height}" fitWidth="${level_menu_AnchorPane.width}"
                   pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../img/Background.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="${level_menu_AnchorPane.height}" fitWidth="${level_menu_AnchorPane.width}"
                   pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../img/Level-Menu.png"/>
            </image>
        </ImageView>
        <HBox spacing="20.0" alignment="CENTER" fx:id="buttonGridHBox"
              AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0">
            <VBox fx:id="buttonHBox">
                <Button fx:id="levelStartButton" focusTraversable="false" mnemonicParsing="false"
                        onAction="#onLevelStartButtonClicked" prefHeight="45.0" prefWidth="204.0"
                        styleClass="Button" stylesheets="@../style/ui-style.css" text="Start">
                    <font>
                        <Font size="28.0"/>
                    </font>
                </Button>
                <Button fx:id="returnButton" focusTraversable="false" mnemonicParsing="false"
                        onAction="#onReturnButtonClicked" prefHeight="45.0" prefWidth="204.0"
                        styleClass="Button" stylesheets="@../style/ui-style.css" text="Return">
                    <font>
                        <Font size="28.0"/>
                    </font>
                </Button>
            </VBox>
            <GridPane fx:id="LevelDescriptionGrid" prefHeight="170.0" prefWidth="675.0"
                      styleClass="LevelDescription">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" prefWidth="152.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" prefWidth="536.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints prefHeight="30.0"/>
                    <RowConstraints prefHeight="30.0"/>
                    <RowConstraints prefHeight="30.0"/>
                </rowConstraints>
            </GridPane>
        </HBox>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="Text"
              text="Level-Overview" fx:id="levelOverviewText">
            <font>
                <Font size="45.0"/>
            </font>
        </Text>
        <HBox alignment="CENTER" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0"
              fx:id="levelIcons1HBox">
            <ImageView fx:id="Level1_Icon" fitHeight="150.0" fitWidth="150.0" onMouseClicked="#onLevelSelected"
                       pickOnBounds="true" styleClass="LevelImages">
                <image>
                    <Image url="@../img/Level_Backgrounds/Level_1_Background/Level_1-Icon.png"/>
                </image>
            </ImageView>
            <ImageView fx:id="Level2_Icon" fitHeight="150.0" fitWidth="150.0" onMouseClicked="#onLevelSelected"
                       pickOnBounds="true" styleClass="LevelImages">
                <image>
                    <Image url="@../img/Level_Backgrounds/Level_2_Background/Level_2-Icon.png"/>
                </image>
            </ImageView>
            <ImageView fx:id="Level3_Icon" fitHeight="150.0" fitWidth="150.0" onMouseClicked="#onLevelSelected"
                       pickOnBounds="true" styleClass="LevelImages">
                <image>
                    <Image url="@../img/Level_Backgrounds/Level_3_Background/Level_3-Icon.png"/>
                </image>
            </ImageView>
            <ImageView fx:id="Level4_Icon" fitHeight="150.0" fitWidth="150.0" onMouseClicked="#onLevelSelected"
                       pickOnBounds="true" styleClass="LevelImages">
                <image>
                    <Image url="@../img/Level_Backgrounds/Level_4_Background/Level_4-Icon.png"/>
                </image>
            </ImageView>
            <ImageView fx:id="Level5_Icon" fitHeight="150.0" fitWidth="150.0" onMouseClicked="#onLevelSelected"
                       pickOnBounds="true" styleClass="LevelImages">
                <image>
                    <Image url="@../img/Level_Backgrounds/Level_5_Background/Level_5-Icon.png"/>
                </image>
            </ImageView>
        </HBox>
        <HBox spacing="20.0" alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              fx:id="levelIcons2HBox">
            <ImageView fx:id="Level6_Icon" fitHeight="150.0" fitWidth="900.0" onMouseClicked="#onLevelSelected"
                       pickOnBounds="true" styleClass="LevelImages" AnchorPane.leftAnchor="350.0"
                       AnchorPane.topAnchor="375.0">
                <image>
                    <Image url="@../img/Level_Backgrounds/Level_6_Background/Level_6-Background.png"/>
                </image>
            </ImageView>
        </HBox>
    </children>
</AnchorPane>
