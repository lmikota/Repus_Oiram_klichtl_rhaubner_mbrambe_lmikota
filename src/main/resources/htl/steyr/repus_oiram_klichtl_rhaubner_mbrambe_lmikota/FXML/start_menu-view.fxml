<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../CSS/ui-style.css" fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="htl.steyr.repus_oiram_klichtl_rhaubner_mbrambe_lmikota.Controller.StartMenuController">
    <AnchorPane fx:id="start_screen_AnchorPane" prefHeight="900.0" prefWidth="1600.0">
        <children>
            <ImageView fitHeight="${start_screen_AnchorPane.height}" fitWidth="${start_screen_AnchorPane.width}" pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <image>
                    <Image url="@../IMG/GameElements/Start-Screen-Background.jpg" />
                </image>
            </ImageView>
            <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="400.0">
                <Button fx:id="startButton" onAction="#onStartButtonClicked" prefHeight="65.0" prefWidth="242.0" styleClass="Button" text="Start" />
                <Button fx:id="exitButton" onAction="#onExitButtonClicked" prefHeight="65.0" prefWidth="242.0" styleClass="Button" text="Exit" />
            </VBox>
            <Button fx:id="menuButton" layoutX="58.0" layoutY="42.0" onMouseClicked="#onMenuButtonClicked" styleClass="menuButton" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="50.0">
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
                        <image>
                            <Image url="@../IMG/GameElements/MenuIcon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </children>
    </AnchorPane>
</StackPane>
