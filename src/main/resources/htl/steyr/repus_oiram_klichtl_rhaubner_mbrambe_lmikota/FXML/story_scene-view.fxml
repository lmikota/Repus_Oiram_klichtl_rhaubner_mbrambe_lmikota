<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="storySceneAnchorPane" focusTraversable="true" maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0"
            prefWidth="1600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="htl.steyr.repus_oiram_klichtl_rhaubner_mbrambe_lmikota.Controller.StorySceneController"
            stylesheets="@../CSS/ui-style.css">
    <children>
        <ImageView fitHeight="${storySceneAnchorPane.height}" fitWidth="${storySceneAnchorPane.width}"
                   pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../IMG/GameElements/Background.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="${storySceneAnchorPane.height}" fitWidth="${storySceneAnchorPane.width}"
                   pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../IMG/GameElements/Level-Menu.png"/>
            </image>
        </ImageView>
        <Text fx:id="dialogText" textAlignment="CENTER" wrappingWidth="544.13671875" styleClass="LevelDescription"
              style="-fx-font-size: 50px">
        </Text>
        <Button fx:id="returnButton" focusTraversable="false" mnemonicParsing="false" onAction="#onReturnButtonClicked"
                prefHeight="45.0" prefWidth="200.0" styleClass="Button" text="Return">
        </Button>
        <Button fx:id="beginJourneyButton" focusTraversable="false" mnemonicParsing="false"
                onAction="#onBeginJourneyButtonClicked" prefHeight="45.0" prefWidth="200.0" styleClass="Button"
                text="Begin Journey">
        </Button>
        <Button fx:id="nextDialogButton" focusTraversable="false" mnemonicParsing="false"
                onAction="#onNextDialogButtonClicked" prefHeight="45.0" prefWidth="200.0" styleClass="Button"
                text="Next Dialog">
        </Button>
    </children>
</AnchorPane>
